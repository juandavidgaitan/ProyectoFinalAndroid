<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#151515"
    tools:context=".RegistrarVeterinario">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Registrar veterinario"
            android:textColor="#FFFFFF"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/txtNit_veterinaria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="0.5dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/round_border1"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="Nit veterinaria"
            android:inputType="number"
            android:padding="12dp"

            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/txtNombreVeterinaria"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="0.5dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/round_border1"
            android:drawablePadding="16dp"
            android:ems="10"
            android:enabled="false"
            android:hint="Nombre"
            android:inputType="textPersonName"
            android:padding="12dp"

            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btnBuscar"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="0.5dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/round_bg1"
            android:padding="10dp"

            android:text="Buscar Veterinaria"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/txtCedula"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="0.5dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/round_border1"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="Cedula"
            android:inputType="number"
            android:padding="12dp"

            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/txtNombrevete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="0.5dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/round_border1"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="Nombres"
            android:inputType="textPersonName"
            android:padding="12dp"

            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/txtApellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="0.5dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/round_border1"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="Apellidos"
            android:inputType="textPersonName"
            android:padding="12dp"

            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/txtedad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="0.5dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/round_border1"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="Edad"
            android:inputType="number"
            android:padding="12dp"

            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/txtCorreovete"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="0.5dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/round_border1"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="Correo"
            android:inputType="textPersonName"
            android:padding="12dp"

            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <EditText
            android:id="@+id/txtSalario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="0.5dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/round_border1"
            android:drawablePadding="16dp"
            android:ems="10"
            android:hint="Salario"
            android:inputType="textPersonName"
            android:padding="12dp"

            android:textColor="#FFFFFF"
            android:textColorHint="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button25"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="0.5dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/round_bg1"
            android:onClick="RegistrarVeterinarios"
            android:padding="10dp"
            android:text="Registrar veterinario"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button26"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="0.5dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/round_bg1"
            android:padding="10dp"
            android:text="Buscar veterinario"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button28"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="0.5dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/round_bg1"
            android:padding="10dp"
            android:text="Modificar veterinario"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/button27"
            android:layout_width="338dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="32dp"
            android:layout_marginTop="0.5dp"
            android:layout_marginEnd="32dp"
            android:background="@drawable/round_bg1"
            android:padding="10dp"
            android:text="Elimnar veterinrio"
            android:textSize="15sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>